<div class="container" id="featureContainer">
    <div class="row">
        <div class="col-lg-5">
            <div class="block-txt pt-xl-8 p-3 pb-lg-5 px-lg-5 mt-lg-5 mb-5 mb-lg-0">
                <div class="inner-block" data-scroll data-scroll-sticky data-scroll-target="#featureContainer">
                    <div class="section-icon mb-2">
                        <i class="{{ post_client.meta('icon_client') }} c-peach"></i>
                    </div>
                    <h2 class="section-title c-blue-dark mb-4">{{ post_client.meta('title_client') }}</h2>
                    {{ post_client.meta('txt_client') }}
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="row">
            {% for i, post_card_client in posts_card_client %}
            {% set i = i + 1 %}
                <div class="col-md-6 mb-5 {% if loop.first %} mt-lg-6{% elseif loop.last %} mt-lg-6-negative{% endif %}" data-scroll>
                    <div class="card card-process" data-scroll data-scroll-speed="1">
                        <div class="card-header">
                            <div class="process-number"><span>0{{i}}</span></div>
                            <img class="img-fluid" src="{{post_card_client.meta('img_card_client')}}" alt="{{post_card_client.alt_card_client}}">
                        </div>
                        <div class="card-body">
                            <p>{{post_card_client.txt_card_client}}</p>
                        </div>
                    </div>
                </div>
             {% endfor %}   
            </div>
        </div>
    </div>
</div>